<resources>

    <!-- DARK THEME STYLES -->
    <style name="calendar_legend_dark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="nav_dark">
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/darkSurface</item>
        <item name="itemTextColor">@color/darkOnSurface</item>
        <item name="itemIconTint">@color/darkOnSurface</item>
    </style>

    <style name="on_surface_dark">
        <item name="android:textColor">@color/darkOnSurface</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="on_primary_dark">
        <item name="android:textColor">@color/darkOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="on_secondary_dark">
        <item name="android:textColor">@color/darkOnSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="header_on_surface_dark" parent="on_surface_dark">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
    </style>


    <style name="subheader_on_surface_dark" parent="header_on_surface_dark">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="page_background_dark">
        <item name="android:background">@color/darkBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="surface_dark">
        <item name="android:background">@color/darkSurface</item>
    </style>
    <style name="surface_primary_dark">
        <item name="android:background">@color/darkPrimary</item>
    </style>
    <style name="surface_secondary_dark">
        <item name="android:background">@color/darkSecondary</item>
    </style>
    <style name="surface_error_dark">
        <item name="android:background">@color/darkError</item>
    </style>

    <style name="button_primary_dark">
        <item name="android:background">@color/darkPrimary</item>
        <item name="android:textColor">@color/darkOnPrimary</item>
    </style>
    <style name="button_secondary_dark">
        <item name="android:background">@color/darkSecondary</item>
        <item name="android:textColor">@color/darkOnSecondary</item>
    </style>

    <style name="toolbar_dark">
        <item name="android:background">@color/darkSurface</item>
        <item name="titleTextColor">@color/darkOnSurface</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayDark</item>
    </style>

    <style name="appbar_dark">
        <item name="android:theme">@style/AppTheme.AppBarOverlayDark</item>
    </style>
    <style name="month_selector_button_dark">
        <item name="android:tint">@color/darkOnSurface</item>
    </style>
    <style name="month_selector_text_dark">
        <item name="android:tint">@color/darkOnSurface</item>
    </style>

    <style name="add_event_dark">
        <item name="android:src">@drawable/material_add_light</item>
        <item name="android:tint">@color/darkOnSurface</item>
    </style>

    <style name="calendar_frag_bottom_dark">
        <item name="android:background">@color/darkBackground</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="calendar_frag_top_dark">
        <item name="android:background">@color/primary</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="event_item_text_dark">
        <item name="android:background">@color/lightThemeSurface</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="event_item_edit_dark">
        <item name="android:background">@color/primary</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="event_item_delete_dark">
        <item name="android:background">@color/error</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="event_list_text_dark">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>
    <style name="event_list_add_text_dark">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:drawableTint">@color/onBackground</item>
        <item name="android:drawableEnd">@drawable/material_add_event</item>
    </style>

