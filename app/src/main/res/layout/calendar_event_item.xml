<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkSurface">


    <TextView
        android:id="@+id/eventDateText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/darkPrimary"
        android:gravity="center"
        android:lineSpacingExtra="2.5dp"
        android:textAllCaps="true"
        android:textColor="@color/darkOnPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.150"/>

    <!--<FrameLayout-->
        <!--android:id="@+id/eventStartImage"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@id/eventDateText"-->
        <!--app:layout_constraintDimensionRatio="W,1:1"-->
        <!--app:layout_constraintStart_toEndOf="@id/eventDateText"-->
        <!--app:layout_constraintTop_toTopOf="@id/eventDateText">-->

        <!--<ImageView-->
            <!--android:layout_width="32dp"-->
            <!--android:layout_height="32dp"-->
            <!--android:layout_gravity="center"-->
            <!--app:srcCompat="@drawable/calendar" />-->
    <!--</FrameLayout>-->


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/eventStartCont"
        app:layout_constraintBottom_toBottomOf="@id/eventDateText"
        app:layout_constraintStart_toEndOf="@id/eventDateText"
        app:layout_constraintTop_toTopOf="@id/eventDateText"
        app:layout_constraintEnd_toStartOf="@+id/eventControlsCont"
        android:background="@color/darkSurface"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:id="@+id/eventType"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true"
            android:textColor="@color/darkOnSurface"
            android:textSize="13sp" />

        <TextView
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:id="@+id/eventTimeTxt"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true"
            android:textColor="@color/darkOnSurface"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/eventControlsCont"
        android:gravity="center"
        android:background="@color/darkSurface"
        app:layout_constraintBottom_toBottomOf="@id/eventStartCont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/eventStartCont">

        <ImageView
            android:id="@+id/viewEventBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/material_view_light" />
        <ImageView
            android:id="@+id/editEventBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/material_edit_light" />

        <ImageView
            android:id="@+id/removeEventBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/material_delete_light" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>