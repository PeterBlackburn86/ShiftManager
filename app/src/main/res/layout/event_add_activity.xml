<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addShiftTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Shift"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true"
            android:textColor="@color/example_5_text_grey"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/addShiftDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shift Date: 20-1-2020"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true"
            android:textColor="@color/example_5_text_grey"
            android:textSize="15sp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addShiftStartLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:labelFor="@+id/addShiftStartTime"
                android:text="Start Time:"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:textColor="@color/example_5_text_grey"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/addShiftStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:textColor="@color/example_5_text_grey"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addShiftEndLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:labelFor="@+id/addShiftStartTime"
                android:text="End Time:"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:textColor="@color/example_5_text_grey"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/addShiftEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:textColor="@color/example_5_text_grey"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/submitShiftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Shift"/>
    </LinearLayout>