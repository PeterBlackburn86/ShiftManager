<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?pageBackground"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?surface"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?headerOnSurface"
            android:text="@string/add_event_title"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?textOnSurface"
            android:text="@string/add_event_help"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?surface"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?headerOnSurface"
            android:text="@string/add_event_details_header"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?surface"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addShiftDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?subHeaderOnSurface"
                android:labelFor="@+id/addShiftStartTime"
                android:text="@string/add_event_date"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/addShiftDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?textOnSurface"
                android:gravity="start|center"
                android:lineSpacingExtra="2.5dp"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?surface"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addShiftStartLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?subHeaderOnSurface"
                android:labelFor="@+id/addShiftStartTime"
                android:text="@string/add_event_start"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/addShiftStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?textOnSurface"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?surface"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/addShiftEndLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?subHeaderOnSurface"
                android:labelFor="@+id/addShiftStartTime"
                android:text="@string/add_event_end"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/addShiftEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?textOnSurface"
                android:gravity="start|center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submitShiftBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?buttonPrimary"
        android:text="@string/add_event_submit" />

</LinearLayout>